<% if !flash[:notice].blank? %>
  <div class="notice">
    <%= flash[:notice] %>
  </div>
<% end %>

<div class="pages index">
  <h2>Pages</h2>

  <%= link_to("Add New Page", new_page_path, :class => 'action new') %>

  <table>
    <tr class="header">
      <th>Id</th>
      <th>#</th>
      <th>Page</th>
      <th>Subject Id</th>
      <th>Visible</th>
      <th>Permalink</th>
      <th>Sections</th>
      <th>Actions</th>
    </tr>
    <% @pages.each do |page| %>
    <tr>
      <td><%= page.id %></td>
      <td><%= page.position %></td>
      <td><%= page.name %></td>
      <td><%= page.subject_id %></td>
      <td class="center"><%= page.visible ? 'Yes' : 'No' %></td>
      <td class="center"><%= page.permalink %></td>
      <td class="center"><%= page.sections.size %></td>
      <td class="actions">
        <%= link_to("Show", page_path(page.id), :class => "action show") %> 
        <%= link_to("Edit", edit_page_path(page.id), :class => "action edit") %>
        <%= link_to("Delete", delete_page_path(page.id), :class => 'action delete') %>
      </td>
    </tr>
    <% end %>
  </table>
</div>
