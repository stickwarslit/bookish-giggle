<div class="subjects index">
  <h2>Subjects</h2>

  <%= link_to("Add New Subject", new_subject_path, :class => 'action new') %>

  <table>
    <tr class="header">
      <th>#</th>
      <th>Id</th>
      <th>Subject</th>
      <th>Visible</th>
      <th>Pages</th>
      <th>Actions</th>
    </tr>
    <% @subjects.each do |subject| %>
    <tr>
      <td><%= subject.position %></td>
      <td><%= subject.id %></td>
      <td><%= subject.name %></td>
      <td class="center"><%= status_tag(subject.visible) %></td>
      <td class="center"><%= subject.pages.size %></td>
      <td class="actions">
        <%= link_to("Show", subject_path(subject.id), :class => "action show") %> 
        <%= link_to("Edit", edit_subject_path(subject.id), :class => "action edit") %>
        <%= link_to("Delete", delete_subject_path(subject.id), :class => 'action delete') %>
      </td>
    </tr>
    <% end %>
  </table>
</div>
